<h1>Cryptocrumbs News Application</h1>
<p>Developed in Rails 7</p>



<% @prices["DISPLAY"].each do |key, value| %>
	<%= key %> - <%= value["USD"]["PRICE"] %> <br/>
	24hr High: <%= value["USD"]["HIGHDAY"] %> <br/>
	24hr Low: <%= value["USD"]["LOWDAY"] %> <br/>
	Market Cap: <%= value["USD"]["MKTCAP"] %> <br/>
	<br/>
<% end %>
<br/> <br/>

<div class="container">
<div class="row">

<% for x in @news["Data"] %>

<div class="col-sm">
<div class="card" style="width: 18rem;">
  <img src="<%= x["imageurl"] %>" class="card-img-top" alt="<%= x["source"] %>">
  <div class="card-body">
    <h5 class="card-title"><%= x["title"] %></h5>
    <p class="card-text"><%= x["body"] %></p>
  </div>
  <div class="card-body">
    <a href="<%= x["url"] %>" class="card-link">Read More</a>
  </div>
</div>
<br/>
</div>

<% end %>
</div>
</div>