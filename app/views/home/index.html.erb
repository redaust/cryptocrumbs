<center>
<h1>Cryptocrumbs News Application</h1>
<p>Developed in Rails 7</p>


<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Symbol Name</th>
      <th scope="col">Price</th>
      <th scope="col">24 Hr High</th>
      <th scope="col">24 hr Low</th>
      <th scope="col">Market Cap</th>
    </tr>
  </thead>
<% @prices["DISPLAY"].each do |key, value| %>
  <tbody>
    <tr>
      <th scope="row"><%= key %></th>
      <td><%= value["USD"]["PRICE"] %></td>
      <td><%= value["USD"]["HIGHDAY"] %></td>
      <td><%= value["USD"]["LOWDAY"] %></td>
      <td><%= value["USD"]["MKTCAP"] %></td>
    </tr>
<% end %>
  </tbody>
</table>

<br/> <br/>

<div class="container">
<div class="row">

<% for x in @news["Data"] %>

<div class="col">
<div class= "card bg-light" style="width: 31rem;">
  <img src="<%= x["imageurl"] %>" class="card-img-top" alt="<%= x["source"] %>">
  <div class="card-body">
    <h5 class="card-title"><%= x["title"] %></h5>
    <p class="card-text"><%= x["body"] %></p>
  </div>
  <div class="card-body">
    <a href="<%= x["url"] %>" class="card-link">Read More</a>
  </div>
</div>
</div>

<% end %>
</div>
</center>
</div>